<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="170dp"
    android:layout_marginLeft="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/c_drawing"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:elevation="8dp"
        android:backgroundTint="#F5FFDA"
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/device_image1"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/man" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/device_category_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"
        android:text="设备名称"
        android:textAlignment="center" />

    <androidx.cardview.widget.CardView
        android:id="@+id/device_approve"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:elevation="8dp"
        android:backgroundTint="#85D0FF"
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp">
        <TextView

            android:layout_width="50dp"
            android:layout_height="15dp"
            android:text="同意"
            android:layout_marginLeft="15dp"
            android:textSize="10dp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/device_reject"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:elevation="8dp"
        android:backgroundTint="#B7B7B7"
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp">
        <TextView
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:text="拒绝"
            android:layout_marginLeft="15dp"
            android:textSize="10dp"/>
    </androidx.cardview.widget.CardView>


</LinearLayout>