<?xml version="1.0" encoding="utf-8"?>
<com.example.smarthome.View.pullextend.PullExtendLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pull_extend"
    android:background="@drawable/smart">
    <com.example.smarthome.View.pullextend.ExtendListHeader
        android:id="@+id/extend_header"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:background="@drawable/sky"/>
    <LinearLayout
        android:id="@+id/huiju_ll"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#4CFFFFFF"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/huiju_tb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            app:titleTextColor="#000000"
            app:title="@string/app_name"
            app:menu="@menu/smarthome_menu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎回家\n主人"
            android:textSize="35dp"
            android:textColor="#DCDCDC"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.03"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"/>


            <com.example.smarthome.View.SeekPage.ViewDrag
                android:id="@+id/add_view"
                android:layout_width="300dp"
                android:layout_height="430dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:descendantFocusability="blocksDescendants"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager" />





    </LinearLayout>




</com.example.smarthome.View.pullextend.PullExtendLayout>